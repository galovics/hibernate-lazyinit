<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<logger name="com.arnoldgalovics.blog" level="DEBUG" />
	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>